{
  "app": {
    "name": "WebCrawler Commander",
    "version": "1.0.0",
    "environment": "development",
    "timezone": "Asia/Shanghai"
  },
  "server": {
    "host": "localhost",
    "port": 8000,
    "api_base_url": "/api/v1",
    "cors_enabled": true,
    "rate_limit": {
      "max_requests": 100,
      "window_ms": 60000
    }
  },
  "database": {
    "type": "sqlite",
    "name": "crawler.db",
    "backup_enabled": true,
    "backup_interval": 86400000
  },
  "crawler": {
    "default_delay": 1000,
    "max_concurrency": 5,
    "timeout": 30000,
    "retry_count": 3,
    "user_agent": "WebCrawler Commander/1.0",
    "respect_robots": true,
    "follow_redirects": true
  },
  "monitoring": {
    "enabled": true,
    "interval": 30000,
    "metrics": {
      "cpu": true,
      "memory": true,
      "disk": true,
      "network": true
    },
    "alerts": {
      "cpu_threshold": 80,
      "memory_threshold": 85,
      "disk_threshold": 90
    }
  },
  "logging": {
    "level": "info",
    "file": "../logs/crawler.log",
    "max_size": 10485760,
    "max_files": 5,
    "format": "json"
  },
  "security": {
    "session_timeout": 3600000,
    "jwt_secret": "change-this-in-production",
    "password_min_length": 8,
    "enable_2fa": false,
    "allowed_origins": ["http://localhost:3000", "http://localhost:8000"]
  },
  "notifications": {
    "email_enabled": false,
    "smtp": {
      "host": "smtp.example.com",
      "port": 587,
      "secure": false,
      "auth": {
        "user": "noreply@example.com",
        "pass": ""
      }
    },
    "templates": {
      "task_completed": "task-completed.html",
      "system_error": "system-error.html"
    }
  },
  "ui": {
    "theme": "light",
    "language": "zh-CN",
    "items_per_page": 10,
    "auto_refresh": true,
    "refresh_interval": 30000
  }
}
